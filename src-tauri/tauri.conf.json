{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "Snow Shot",
    "version": "0.1.3-beta-20250622",
    "identifier": "com.chao.snowshot",
    "build": {
        "frontendDist": "../out",
        "devUrl": "http://localhost:8301",
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "height": 632,
                "resizable": false,
                "title": "Snow Shot",
                "width": 1024,
                "center": true,
                "decorations": false,
                "url": "/"
            },
            {
                "label": "draw",
                "fullscreen": false,
                "title": "Snow Shot - Draw",
                "center": true,
                "decorations": false,
                "shadow": false,
                "transparent": true,
                "skipTaskbar": true,
                "width": 0,
                "height": 0,
                "maximizable": false,
                "minimizable": false,
                "resizable": false,
                "url": "/draw"
            }
        ],
        "macOSPrivateApi": true,
        "security": {
            "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "*",
                    "**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": {
            "models/": "models/",
            "ffmpeg/": "ffmpeg/"
        }
    }
}